<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
<body>
  <%- include("./partials/nav.ejs") %>
  <header>
    <h1>View Lists</h1>
  </header>

  <ul>
    <li><a href="/lists/view">View Lists</a></li>
    <li><a href="/lists/create">Create List</a></li>
  </ul>
  
  <main>
    <div>
      <% if (result.length === 0) { %>
        <p>There are no lists to display</p>
      <% } else { %>
        <h2>Click on a list to edit it</h2>
        <ul>
          <% result.forEach(list => { %>
          <li><a href="/lists/edit/<%= list.id %>"><%= list.title %></a></li>
          <% }) %>
        </ul>
      <% } %>
    </div>
  </main>

  <%- include("./partials/footer.ejs") %>

</body>
</html>