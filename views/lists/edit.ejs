<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>
<body>
  <%- include("../partials/nav.ejs") %>
  <header>
    <h1>Edit List</h1>
  </header>

  <%- include("../partials/sub-nav.ejs") %>
  
  <main id="edit-ejs">

    <h2>Add items to list</h2>

    <article class="edit-article">
      <section class="list-details">

        <h3><%= list.title %></h3>
        <div class="form">
          <form action="/lists/edit/<%= list.id %>" method="post">
            <div>
              <input type="text" name="add" id="add" autofocus>
            </div>
            <div>
              <button class="add"> + </button>
            </div>
          </form>
        </div>

        <button><a href="/lists/create">New List</a></button>
        <button class="deleteList" data-doc="<%= list._id %>"><a href="">Delete List</a></button>

      </section>

      <section class="list-items">

          <div class="edit-list">
            <ul>
              <% if (list.items.length === 0) { %>
                <p>There are currently no items in this list</p>
              <% } else { %>
                <% list.items.forEach(item => { %>
                  <li>
                    <%= item %><button><i class="fas fa-ellipsis-h" data-item="<%= item %>"></i></button>
                    <div class="options hide" data-item="<%= item %>">
                      <button class="trashcan" data-id="<%= list._id %>" data-doc="<%= item %>" class="trashcan"><i class="far fa-trash-alt"></i></button>
                    </div>
                  </li>
                  <%  %>
                <% }) %>
              <% } %>
            </ul>
          </div>

      </section>
    </article>
    
  </main>

  <%- include("../partials/footer.ejs") %>
  <script src="/script.js"></script>
</body>
</html>