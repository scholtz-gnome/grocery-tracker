<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>
<body>
  <%- include("../partials/nav.ejs") %>
  <header>
    <h1>Create List</h1>
  </header>

  <%- include("../partials/sub-nav.ejs") %>
  
  <main>
    <h2>Create a name for your grocery list</h2>
    <form id="<%= user.email %>">
      <div>
        <input type="text" name="title" id="title" required autofocus>
        <label for="title"><button>Create List</button></label>
      </div>
    </form>
  </main>

  <%- include("../partials/footer.ejs") %>

  <script>
    
    const form = document.querySelector("form");
    
    form.addEventListener("submit", (e) => {

      e.preventDefault();

      const title = form.title.value;
      const email = form.id;

      fetch("/lists/view", {
        method: "POST",
        body: JSON.stringify({ title, permissions: { owner: email } }),
        headers: { "Content-Type": "application/json" }
      })
        .then(response => window.location.href = "/lists/view")
        .catch(err => console.log(err));

    });
  </script>

</body>
</html>